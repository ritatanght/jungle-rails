<section class="user-login">

  <header class="page-header">
    <h1>Login</h1>
  </header>

  <%= form_with url: login_path do |form|%>

    <%= form.label :email %>
    <%= form.text_field :email %>

    <%= form.label :password %>
    <%= form.password_field :password %>

    <%= form.submit "Submit" %>

  <% end %>

</section>