<section class="user-sign-up">

  <header class="page-header">
    <h1>Signup</h1>
  </header>

  <span>Already have an account? <%= link_to "Login", login_path, class: 'text-decoration-none' %></span>
  
  <% if @errors %>
    <% @errors.each do |msg| %>
      <%= render 'flash', type:'alert', msg:msg %>
    <% end %>
  <% end %>
  
  <div class="col-sm-6 col-sm-offset-1 mt-3">
    <%= form_for :user, url: '/users' do |form| %>
      <div class="form-group mb-2">
        <%= form.label :first_name %>
        <%= form.text_field :first_name, class: 'form-control' %>
      </div>
      <div class="form-group mb-2">
        <%= form.label :last_name %>
        <%= form.text_field :last_name, class: 'form-control' %>
      </div>
      <div class="form-group mb-2">
        <%= form.label :email %>
        <%= form.text_field :email, class: 'form-control' %>
      </div>
      <div class="form-group mb-2">
        <%= form.label :password %>
        <%= form.password_field :password, class: 'form-control' %>
      </div>
      <div class="form-group mb-2">
        <%= form.label :password_confirmation %>
        <%= form.password_field :password_confirmation, class: 'form-control' %>
      </div>

      <%= form.submit "Submit", class: 'btn btn-primary my-2 fs-5' %>

    <% end %>
  </div>
</section>